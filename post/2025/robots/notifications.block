# newsletter for robots

span:
  - _class: modal top-right-fixed transparent
  - _style: "width: calc(53vw - var(--modal-side-margin))"
  - _id: notifications
  - !FOREACH
      - [i, title, desc, href]
      - span:
          _id: 'notification-{i}'
          _class: modal
          _style: "width: calc(50vw - var(--modal-side-margin)); padding-bottom: 15px;"
          button:
            _style: "float: right;"
            _class: nodecorate hoverable
            _id: 'close-notification-{i}'
            t: '‚ùå'
          a:
            _href: '{href}'
            _target: '_blank'
            _class: nodecorate
            p:
              _style: 'padding: 0px; margin: 0px;'
              b: '{title}'
              br: ''
              i:
                - _class: tiny-font
                - '{desc}'
